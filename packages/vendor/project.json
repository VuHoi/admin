{
  "name": "vendor",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": ".next"
      },
      "configurations": {
        "development": {
          "outputPath": ".next"
        },
        "production": {
          "outputPath": ".next"
        }
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "vendor:build",
        "dev": true,
        "port": 4201
      },
      "configurations": {
        "development": {
          "buildTarget": "vendor:build:development",
          "dev": true,
          "port": 4201
        },
        "production": {
          "buildTarget": "vendor:build:production",
          "dev": false,
          "port": 4201
        }
      }
    },
    "start": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "production",
      "options": {
        "buildTarget": "vendor:build",
        "dev": false,
        "port": 4201
      },
      "configurations": {
        "development": {
          "buildTarget": "vendor:build:development",
          "dev": true,
          "port": 4201
        },
        "production": {
          "buildTarget": "vendor:build:production",
          "dev": false,
          "port": 4201
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/packages/vendor"],
      "options": {
        "jestConfig": "jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    }
  },
  "tags": ["vendor", "frontend", "application"]
} 